<Window x:Class="DocCreator01.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DocCreator01.ViewModels"
        xmlns:views="clr-namespace:DocCreator01.Views"
        Title="{Binding WindowTitle}"
        Height="800" 
        Width="1200">

    <Window.Resources>
        <!-- Кладём шаблон заголовка -->
        <!-- Window.Resources -->
        <DataTemplate x:Key="ClosableTabHeaderTemplate">
            <Grid Margin="0"
                  MinHeight="30" 
                  MinWidth="70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- текст -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- крестик -->
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="{Binding Title}"
                   VerticalAlignment="Center"
                   Margin="0"
                   FontSize="14"
                   Foreground="#333"/>

        <!-- Крестик -->
        <Button Grid.Column="1"
                Content="×"
                Width="18" Height="18"
                FontWeight="Bold"
                Padding="0"
                FontSize="18"
                Cursor="Hand"
                BorderThickness="0"
                Background="Transparent"
                ToolTip="Закрыть вкладку"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding DataContext.CloseTabCommand,
                                  RelativeSource={RelativeSource AncestorType=TabControl}}"
                CommandParameter="{Binding}">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Focusable"  Value="False"/>
                    <Setter Property="Foreground" Value="#666"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
        </DataTemplate>
    </Window.Resources>

    
    
    <Window.InputBindings>
        <KeyBinding Key="S"
                    Modifiers="Control"
                    Command="{Binding SaveCommand}" />
    </Window.InputBindings>



    <DockPanel>
        <!-- Верхнее меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть…"
                          Command="{Binding OpenCommand}"/>
                <MenuItem Header="Сохранить"
                          Command="{Binding SaveCommand}"/>
                <MenuItem Header="Закрыть"
                          Command="{Binding CloseCurrentCommand}" />
                <Separator/>
                <MenuItem Header="Выход"
                          Command="{Binding ExitCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Основная сетка -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <!-- Левая голубая панель -->
            <views:TextPartsPanelUserControl Grid.Column="0" DataContext="{Binding}"/>

            <!-- Центральный TabControl -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Красная + -->
                <Button Content="+" Width="30" Height="30"
                        Command="{Binding AddTabCommand}"
                        HorizontalAlignment="Right" Margin="0,5,5,0"
                        Background="Red" Foreground="White"/>

                <TabControl Grid.Row="1"
            ItemsSource="{Binding Tabs}" 
            SelectedItem="{Binding SelectedTab}">
                    <TabControl.ItemContainerStyle>
                        <Style TargetType="TabItem">
                            <!-- растягиваем Grid-шапку -->
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            
                           
                            <!-- подключаем шаблон -->
                            <Setter Property="HeaderTemplate" Value="{StaticResource ClosableTabHeaderTemplate}"/>

                            <!-- размеры вкладки -->
                            <Setter Property="MinWidth" Value="70"/>
                            <Setter Property="Height"   Value="30"/>

                            <!-- контекстное меню (если нужно) -->
                            <EventSetter Event="MouseRightButtonUp"
                         Handler="TabItem_RightClick"/>
                        </Style>
                    </TabControl.ItemContainerStyle>
                    <!-- контент вкладки -->
                    <TabControl.ContentTemplate>
                        <DataTemplate DataType="{x:Type vm:TabPageViewModel}">
                            <views:TextPartUserControl DataContext="{Binding TextPart}"/>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </Grid>

            <!-- Правая колонка -->
            <DockPanel Grid.Column="2" Margin="10,0,0,0">
                <Border Background="#E5A100" Height="200" DockPanel.Dock="Top">
                    <TextBlock Text="Status"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>

                <Button Content="Create"
                        Command="{Binding GenerateCommand}"
                        Height="50" Margin="0,10,0,10"
                        Background="#0063B1" Foreground="White"
                        DockPanel.Dock="Top"/>

                <ListBox ItemsSource="{Binding GeneratedDocs}"
                         Background="#FEFDB0" DockPanel.Dock="Bottom">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Image Source="/Assets/word.png" Width="32" Height="32"/>
                                <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
