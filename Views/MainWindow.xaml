<Window x:Class="DocCreator01.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DocCreator01.ViewModels"
        xmlns:views="clr-namespace:DocCreator01.Views"
        Title="DocGen App" Height="800" Width="1200">

    <Window.Resources>
        <DataTemplate x:Key="ClosableTabHeaderTemplate">
            <StackPanel Orientation="Horizontal" Margin="0">
                <!-- Текст заголовка -->
                <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Margin="0,0,6,0"/>

                <!-- Крестик -->
                <Button Content="×"
                Width="16" Height="16" Padding="0"
                FontWeight="Bold"
                ToolTip="Закрыть вкладку"
                Cursor="Hand"
                BorderThickness="0"
                Background="Transparent"
                VerticalAlignment="Center"
                Command="{Binding DataContext.CloseTabCommand,
                                  RelativeSource={RelativeSource AncestorType=TabControl}}"
                CommandParameter="{Binding}">
                    <!-- убираем фокус-рамку -->
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="Foreground" Value="#444"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </DataTemplate>

    </Window.Resources>
    
    <DockPanel>

        <!-- Верхнее меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть…"
                          Command="{Binding OpenCommand}"/>
                <MenuItem Header="Сохранить"
                          Command="{Binding SaveCommand}"/>
                <Separator/>
                <MenuItem Header="Выход"
                          Command="{Binding ExitCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Основная сетка -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <!-- Левая голубая панель -->
            <DockPanel Grid.Column="0">
                <ListBox ItemsSource="{Binding CurrentProject.ProjectData.TextParts}"
                         SelectedItem="{Binding SelectedTab.Model, Mode=TwoWay}"
                         DisplayMemberPath="Title"
                         Background="#B7DAF2"
                         DockPanel.Dock="Top" Height="260"/>
                <StackPanel DockPanel.Dock="Bottom" Margin="0,20,0,0">
                    <Button Content="Button1" Height="60" Margin="10" Background="#CDEFA3"/>
                    <Button Content="Button2" Height="60" Margin="10" Background="#CDEFA3"/>
                    <Button Content="⚙"       Height="60" Margin="10" Background="#CDEFA3"/>
                </StackPanel>
            </DockPanel>

            <!-- Центральный TabControl -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Красная + -->
                <Button Content="+" Width="30" Height="30"
                        Command="{Binding AddTabCommand}"
                        HorizontalAlignment="Right" Margin="0,5,5,0"
                        Background="Red" Foreground="White"/>

                <TabControl Grid.Row="1"
                            ItemsSource="{Binding Tabs}"
                            SelectedItem="{Binding SelectedTab}">
                    <TabControl.ItemContainerStyle>
                        <Style TargetType="TabItem">
                            <Setter Property="Header" Value="{Binding Model.Title}"/>
                            <EventSetter Event="MouseRightButtonUp" Handler="TabItem_RightClick"/>
                        </Style>
                    </TabControl.ItemContainerStyle>

                    <TabControl.ContentTemplate>
                        <DataTemplate DataType="{x:Type vm:TabPageViewModel}">
                            <views:TextPartUserControl DataContext="{Binding Model}"/>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </Grid>

            <!-- Правая колонка -->
            <DockPanel Grid.Column="2" Margin="10,0,0,0">
                <Border Background="#E5A100" Height="200" DockPanel.Dock="Top">
                    <TextBlock Text="Status"
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>

                <Button Content="Create"
                        Command="{Binding GenerateCommand}"
                        Height="50" Margin="0,10,0,10"
                        Background="#0063B1" Foreground="White"
                        DockPanel.Dock="Top"/>

                <ListBox ItemsSource="{Binding GeneratedDocs}"
                         Background="#FEFDB0" DockPanel.Dock="Bottom">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Image Source="/Assets/word.png" Width="32" Height="32"/>
                                <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
