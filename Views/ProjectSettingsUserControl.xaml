<UserControl x:Class="DocCreator01.Views.ProjectSettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocCreator01.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Project Settings" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>
            
            <!-- Project Name Section -->
            <GroupBox Header="Project Information" Padding="10" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Project Name:" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="5,2"
                             Margin="0,5,0,5"/>
                </Grid>
            </GroupBox>
            
            <GroupBox Header="Document Generation Options" Padding="10" Margin="0,0,0,20">
                <local:SettingsUserControl DataContext="{Binding Settings}"/>
            </GroupBox>
            
            <!-- Add more project settings sections as needed -->
            <TextBlock Text="More settings will be available in future versions." 
                       Margin="0,20,0,0" 
                       Foreground="Gray" 
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
