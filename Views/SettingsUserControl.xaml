<UserControl x:Class="DocCreator01.Views.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocCreator01.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="250">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Document Type:" FontWeight="Bold" Margin="0,0,0,5"/>
            <RadioButton Content="DOCX" 
                         IsChecked="{Binding IsDocxSelected}" 
                         Margin="5,2,0,2"
                         GroupName="DocType"/>
            <RadioButton Content="HTML" 
                         IsChecked="{Binding IsHtmlSelected}" 
                         Margin="5,2,0,2"
                         GroupName="DocType"/>
        </StackPanel>
    </Grid>
</UserControl>
