<UserControl x:Class="DocCreator01.Views.TextPartsPanelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DocCreator01.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel,
                                             IsDesignTimeCreatable=True}">

    <!-- ───────── ресурсы ───────── -->
    <UserControl.Resources>
        <Style x:Key="SmallToolButtonStyle" TargetType="Button">
            <Setter Property="Height"       Value="25"/>
            <Setter Property="Width"        Value="25"/>
            <Setter Property="Margin"       Value="0,0,5,0"/>
            <Setter Property="FontWeight"   Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <DockPanel Margin="7,0,7,7" LastChildFill="True">

        <!-- панель инструментов -->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    Margin="0,7,0,5">

            <Button Content="+" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding AddTextPartCommand}"/>
            <Button Content="–" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding RemoveTextPartCommand}"/>
            <Button Content="▲" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding MoveUpCommand}"/>
            <Button Content="▼" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding MoveDownCommand}"/>
            <Button Content="◀" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding MoveLeftCommand}"/>
            <Button Content="▶" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding MoveRightCommand}"/>
        </StackPanel>

        <!-- DataGrid вместо ListBox -->
        <DataGrid ItemsSource="{Binding CurrentProject.ProjectData.TextParts}"
                  SelectedItem="{Binding SelectedPanelItem.TextPart, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="None"
                  GridLinesVisibility="None"
                  Background="#B7DAF2"
                  BorderThickness="0"
                  RowHeight="26"         
                  Padding="0"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Title}" Width="*" />
            </DataGrid.Columns>
            <DataGrid.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick"
                              Command="{Binding DataContext.ActivateTabCommand,
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </DataGrid.InputBindings>
        </DataGrid>
    </DockPanel>
</UserControl>
