<UserControl x:Class="DocCreator01.Views.TextPartsPanelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DocCreator01.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel,
                                             IsDesignTimeCreatable=True}">

    <!-- ───────── ресурсы ───────── -->
    <UserControl.Resources>
        <Style x:Key="SmallToolButtonStyle" TargetType="Button">
            <Setter Property="Height"       Value="24"/>
            <Setter Property="Width"        Value="24"/>
            <Setter Property="Margin"       Value="0,0,4,0"/>
            <Setter Property="FontWeight"   Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <DockPanel Margin="7,0,7,7" LastChildFill="True">

        <!-- панель инструментов -->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    Margin="0,7,0,5">

            <Button Content="+" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding AddTextPartCommand}"/>
            <Button Content="–" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding RemoveTextPartCommand}"/>
            <Button Content="▲" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding MoveUpCommand}"/>
            <Button Content="▼" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding MoveDownCommand}"/>
            <Button Content="◀" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding MoveLeftCommand}"/>
            <Button Content="▶" Style="{StaticResource SmallToolButtonStyle}"
                    Command="{Binding MoveRightCommand}"/>
        </StackPanel>

        <!-- DataGrid updated to use TextPartViewModels -->
        <DataGrid x:Name="PartsGrid"
                  ItemsSource="{Binding MainGridLines}"
                  SelectedItem="{Binding SelectedMainGridItemViewModel, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="None"
                  GridLinesVisibility="None"
                  Background="#B7DAF2"
                  BorderThickness="0"
                  RowHeight="26"
                  Padding="0"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False">

            <DataGrid.Columns>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!-- The indentation is now handled by the view model -->
                                <TextBlock Text="{Binding Indentation}" 
                                           Foreground="White" 
                                           FontFamily="Consolas" 
                                           VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Title}" 
                                           VerticalAlignment="Center" />
                                <TextBlock Text=" — " 
                                           Foreground="#777777" 
                                           VerticalAlignment="Center" />
                                <TextBlock Text="{Binding Level}" 
                                           Foreground="#FF6600" 
                                           FontWeight="SemiBold" 
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick"
                              Command="{Binding DataContext.ActivateTabCommand,
                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                              CommandParameter="{Binding Model}" />
            </DataGrid.InputBindings>
        </DataGrid>
    </DockPanel>
</UserControl>
